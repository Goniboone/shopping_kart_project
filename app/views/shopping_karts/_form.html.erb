<%= form_with(model: shopping_kart, local: true) do |form| %>
  <% if shopping_kart.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(shopping_kart.errors.count, "error") %> prohibited this shopping_kart from being saved:</h2>

      <ul>
      <% shopping_kart.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <h3>Food</h3>
  <div id='foods'>
    <%= form.fields_for :foods do |food| %>
      <%= render 'food_fields', form: food %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'add food item', form, :foods %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Saved' %>
  </div>
<% end %>
